<% layout('/campgrounds/layouts/boilerplate.ejs') %>
<div class="row">
    <h3 class="text-center">Edit CAMPGROUND</h3>
    <div class="col-lg-6 offset-lg-3 col-md-12 ">
        <form method="POST" action="/campgrounds/<%= camp._id %>?_method=PATCH" class="needs-validation" novalidate>
            <div class="mb-3">
                <label class="form-label" for="title">Title : </label>
                <input class="form-control" type="text" name="title" id="title" value="<%= camp.title %>" required/>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location : </label>
                <input class="form-control" type="text" name="location" id="location" value="<%= camp.location%>" required/>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image Url : </label>
                <input class="form-control" type="text" name="image" id="image" value="<%= camp.image%>" required/>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Price : </label>
                <div class="input-group">
                    <span class="input-group-text">â‚¹</span>
                    <input type="number" id="price" name="price" class="form-control" placeholder="Price" value="<%= camp.price%>" required>
                  </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description" >Description : </label>
                <textarea class="form-control" id="description" type="text" name="description" required><%= camp.description%></textarea>
            </div>
            <div class="mb-3">
                <button class="btn btn-sm btn-info" type="submit">Update Campground</button>
                <a class="btn btn-sm btn-dark float-end" href="/campgrounds/<%= camp._id %>">Back to Campground</a>
            </div>
            
        </form>

    </div>
</div>
