<% layout('/campgrounds/layouts/boilerplate.ejs') %>
    <% for(camp of campData) {%>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" src="<%=camp.image%>" alt="">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= camp.title %>
                        </h5>
                        <p class="card-text">
                            <%= camp.description %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= camp.location %>
                            </small>
                        </p>
                        <a class="btn btn-sm btn-outline-dark" href="/campgrounds/<%=camp._id%>">View Camp</a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>
            </ul>